{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    // "types": ["jest", "@testing-library/jest-dom"],
    "typeRoots": ["node_modules/@types", "src/declaration.d.ts"],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "ui-library": ["./lib/main.ts"],
      "ui-library/*": ["./lib/*"]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "lib", "src/declaration.d.ts"],
  "exclude": ["src/**/__docs__", "src/**/__test__", "**/*.stories.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
